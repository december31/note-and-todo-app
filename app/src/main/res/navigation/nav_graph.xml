<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/fragment_main_nav"
    android:id="@+id/nav_graph">

    <fragment
        android:id="@+id/fragment_main_nav"
        android:name="com.example.note_and_todo_app.MainNavFragment"
        tools:layout="@layout/fragment_main_nav">
        <action
            android:id="@+id/action_fragment_main_nav_to_fragment_task_list"
            app:destination="@id/fragment_task_list" />
    </fragment>
    <fragment
        android:id="@+id/noteDetail"
        android:name="com.example.note_and_todo_app.note.NoteDetailFragment"
        android:label="fragment_note_detail"
        tools:layout="@layout/fragment_note_detail" >
        <action
            android:id="@+id/action_noteDetail_to_fragment_note"
            app:destination="@id/noteFragment" />
        <argument android:name="noteDetail" />
    </fragment>
    <fragment
        android:id="@+id/noteFragment"
        android:name="com.example.note_and_todo_app.note.NoteFragment"
        tools:layout="@layout/fragment_note">
        <action
            android:id="@+id/action_fragment_note_to_noteDetail"
            app:destination="@id/noteDetail" />
        <action
            android:id="@+id/action_fragment_note_to_addNoteFragment"
            app:destination="@id/addNoteFragment" />
    </fragment>
    <fragment
        android:id="@+id/addNoteFragment"
        android:name="com.example.note_and_todo_app.AddNoteFragment"
        android:label="fragment_add_note"
        tools:layout="@layout/fragment_add_note" >
        <action
            android:id="@+id/action_addNoteFragment_to_fragment_note"
            app:destination="@id/noteFragment" />
    </fragment>

    <fragment
        android:id="@+id/fragment_task_list"
        android:name="com.example.note_and_todo_app.todo.list.TaskListFragment"
        tools:layout="@layout/fragment_task_list"/>
    <fragment
        android:id="@+id/fragment_task_language"
        android:name="com.example.note_and_todo_app.setting.Language"
        tools:layout="@layout/fragmentlanguage">
        <action
            android:id="@+id/action_fragment_task_language_self"
            app:destination="@id/fragment_task_language" />
    </fragment>
    <fragment
        android:id="@+id/fragment_task_shared"
        android:name="com.example.note_and_todo_app.setting.SharedApp"
        tools:layout="@layout/menushared">

    </fragment>
    <fragment
        android:id="@+id/layout_task_privacy"
        android:name="com.example.note_and_todo_app.setting.Privacy"
        tools:layout="@layout/layout_privacy">
        <action
            android:id="@+id/action_layout_task_privacy_self"
            app:destination="@id/layout_task_privacy" />
    </fragment>
    <fragment
        android:id="@+id/layout_task_open"
        android:name="com.example.note_and_todo_app.setting.Fragment_openmoment"
        tools:layout="@layout/open_moment">

    </fragment>



</navigation>