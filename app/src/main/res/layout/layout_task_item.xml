<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.example.note_and_todo_app.database.task.TaskState" />

        <variable
            name="data"
            type="com.example.note_and_todo_app.database.task.Task" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/delete_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/checkbox"
                android:scaleX="0.55"
                android:scaleY="0.55"
                android:checked="@{data.state == TaskState.DONE}"
                android:button="@drawable/ic_checkbox"
                android:layout_marginStart="-12dp"
                android:buttonTint="#a6a6a6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/title"
                tools:text="@tools:sample/lorem/random"
                android:text="@{data.title}"
                android:textSize="18sp"
                android:ellipsize="end"
                android:lines="1"
                android:paddingEnd="12dp"
                android:textColor="@color/black"
                android:maxWidth="160dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/due_date"
                tools:text="@tools:sample/date/ddmmyy"
                android:textSize="12sp"
                android:paddingVertical="0dp"
                android:background="@drawable/bg_transparent_rounded"
                android:layout_width="wrap_content"
                android:layout_height="18dp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <ImageView
            android:id="@+id/delete_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_delete"
            android:layout_width="18dp"
            android:layout_height="18dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
