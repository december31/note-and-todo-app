<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
    
    <data tools:ignore="ExtraText">
        <import type="android.view.View"/>
        <import type="com.example.note_and_todo_app.ui.setting.SettingItem.Type"/>
        <variable
            name="data"
            type="com.example.note_and_todo_app.ui.setting.SettingItem"/>
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:paddingVertical="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            android:textSize="16sp"
            android:text="@string/app_name"
            android:textColor="@color/black"
            tools:text="@tools:sample/full_names"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <Switch
            android:id="@+id/check"
            android:trackTint="@drawable/switch_track"
            android:thumbTint="@drawable/switch_thumb"
            android:checked="true"
            android:visibility="@{data.hasSwitch ? View.VISIBLE : View.GONE}"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <TextView
            android:id="@+id/text_right"
            tools:text="English"
            android:layout_marginEnd="8dp"
            android:visibility="@{data.type == Type.LANGUAGE?View.VISIBLE:View.GONE}"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/icon_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/icon_right"
            android:src="@drawable/ic_back"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:visibility="@{data.type == Type.LANGUAGE?View.VISIBLE:View.GONE}"
            android:rotation="180"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

    </RelativeLayout>
</layout>
