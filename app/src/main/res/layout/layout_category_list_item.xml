<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="isShowRV"
            type="Boolean" />

        <variable
            name="numberOfTasks"
            type="Integer" />

        <variable
            name="isShowTasksCount"
            type="Boolean" />

        <variable
            name="isMissed"
            type="Boolean" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/title"
                android:textStyle="bold"
                tools:text="Demonstrate"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:paddingVertical="12dp"
                app:layout_constraintStart_toStartOf="parent"
                android:textAlignment="textStart"
                app:layout_constraintEnd_toStartOf="@id/tasks_count_container"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/new_task_button"
                android:src="@drawable/ic_plus"
                android:visibility="@{isMissed ? View.GONE : isShowRV || !isShowTasksCount ? View.VISIBLE : View.GONE}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <androidx.cardview.widget.CardView
                android:id="@+id/tasks_count_container"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:backgroundTint="@color/light_gray"
                android:layout_width="22dp"
                android:layout_height="22dp"
                app:cardCornerRadius="30dp"
                android:visibility="@{isMissed ? View.VISIBLE : isShowTasksCount ? View.VISIBLE : View.GONE}"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                tools:ignore="RelativeOverlap">

                <TextView
                    android:id="@+id/tasks_count"
                    tools:text="1"
                    android:text="@{Integer.toString(numberOfTasks)}"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center" />
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            app:layout_constraintTop_toBottomOf="@id/new_task_button"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:visibility="@{isShowRV?View.VISIBLE:View.GONE}"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>
