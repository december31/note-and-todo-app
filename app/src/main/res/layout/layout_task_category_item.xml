<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="data"
            type="com.example.note_and_todo_app.database.task.TaskCategory" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@drawable/rectangle_with_10dp_radius_white_bg_and_shadow"
        android:layout_height="100dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/tasks_count_container"
            android:backgroundTint="@color/gray"
            android:layout_width="22dp"
            android:layout_height="22dp"
            app:cardCornerRadius="30dp"
            android:visibility="@{data == null ? View.GONE : View.VISIBLE}"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            tools:ignore="RelativeOverlap">
            <TextView
                android:id="@+id/tasks_count"
                tools:text="1"
                android:text="@{Integer.toString(data.numberOfItem)}"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/title"
            tools:text="Task"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="@{data.title}"
            android:visibility="@{data == null ? View.GONE : View.VISIBLE}"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:src="@drawable/ic_plus"
            android:layout_centerInParent="true"
            android:visibility="@{data != null ? View.GONE : View.VISIBLE}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</layout>
